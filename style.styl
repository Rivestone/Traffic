$background = #fefefe;
$card-bg = #f4f4f4;
$yellow = #fef01e;
$active-sort = #e4e5e7;
$text-color = #000000;
$size-color = #777777;


html, body{
  margin: 0;
  padding: 0;
  font-size: 0;
}
body{
  background-color: $background;
}
.b-container{
  max-width: 800px;
  margin: 10px auto 0;
  font-weight: 600;
}
.b-main-content{
  display: flex;
  &__sort{
    margin-right: 95px;
  }
}
.b-sort{
  width: 90px;
  font-family: Andale Mono, monospace;
  font-size: 10px;
  text-transform: uppercase;
  &__reset{
    margin-bottom: 18px;
    text-decoration: underline;
    text-transform: lowercase;
  }
  &__type{
    margin-bottom: 25px;
    &-title{
      font-size: 14px;
      font-weight: 800;
    }
  }
  &__options{
    margin-top: 15px;
  }
  &__option{
    padding 4px 0;

    &.is-active{
      background-color: $active-sort;
      position: relative;
      &:before{
        position: absolute;
        top: 0;
        left: -10px;
        height: 100%;
        width: 10px;
        background-color: $active-sort;
        content: '';
      }
      &:after{
        position: absolute;
        right: 3px;
        content: "\00d7";
      }
    }
  }
  &__option-color{
    display: inline-block;
    box-sizing: border-box;
    width: 13px;
    height: 4px;
    margin-right: 7px;
    border: 1px solid $active-sort;
    background-color: red;
  }
  &__show-more{
    margin-top: 10px;
    text-decoration: underline;
  }
  &__all{
    margin-top:25px;
    padding: 8px 10px;
    background-color: $yellow;
    text-align: center;
  }
}
.b-catalog{
  display: flex;
  flex-wrap: wrap;

  &__item-wrapper{
    width: calc(100%/3);
    box-sizing: border-box;
    padding: 0 5px;
    margin-bottom: 10px;
    @media only screen and (min-width: 1000px){
      &:nth-child(2){
        width: calc(2*100%/3);
        .b-catalog__img{
          height: 195px;
          }
        .b-catalog__price{
          position: absolute;
          right: 13px;
          bottom: 13px;
          font-size: 20px;
        }
      }
    }
  }
  &__item{
    position: relative;
    padding: 10px 10px 13px 10px;
    background-color: $card-bg;
    color: $text-color;
    border: 2px solid $card-bg
    cursor: pointer;
    &:hover{
      border: 2px solid $yellow;
      .b-catalog__visible-info{
        position: relative;
        bottom: 35px;
      }
      .b-catalog__img{
        position: relative;
        bottom: 35px;
      }
      .b-catalog__size{
        position: absolute;
        bottom: 17px;
        left: 11px;
        display: block;
      }
    }
    &:before{
      position: absolute;
      content: '';
      background: url('heart-outline.png') no-repeat;
      background-size: cover;
      height: 8px;
      width: 8px;
    }
  }
  &__img{
    height: 150px;
    width: 100%;
    background-size: contain;
    background-position: center;
    background-repeat: no-repeat;
    margin-top: 30px;
  }
  &__name{
    text-transform: uppercase;
    font-family: Andale Mono, monospace;
    font-size: 14px;
  }
  &__description{
    font-family: Andale Mono, monospace;
    font-size: 14px;
  }
  &__price{
    font-family: Andale Mono, monospace;
    text-transform: uppercase;
    margin-top: 12px;
    font-size: 14px;
  }
  &__size{
    font-family: Andale Mono, monospace;
    display: none;
    font-size: 10px;
    color: $size-color;
    text-transform: uppercase;
  }
}
.b-actual-sort{
  margin: 0 0 10px 190px;

  &__item{
    position: relative;
    display: inline-block;
    margin-left: 5px;
    padding: 4px 15px 4px 6px;
    border: 1px solid $text-color;
    border-radius: 15px;
    font-family: Andale Mono, monospace;
    font-size: 10px;
    text-transform: uppercase;

    &:first-child{
      margin-left:0;
    }
    &:after{
      position: absolute;
      right: 3px;
      content: "\00d7";
    }
  }
}

@media only screen and (max-width: 1000px){
  .b-catalog__item-wrapper{
    width: 50%;
  }
}

@media only screen and (max-width: 600px){
  .b-catalog__item-wrapper{
    width: 100%;
  }
}
